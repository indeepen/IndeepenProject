<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorIndeepen</item>
        <item name="colorPrimaryDark">@color/colorIndeepen</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontTheme" parent="AppTheme">
        <item name="android:typeface">monospace</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Indeepen" parent="AppTheme">
        <item name="colorPrimary">@color/colorIndeepen</item>
        <item name="colorPrimaryDark">@color/colorIndeepen</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.IndeepenCreate" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorIndeepen</item>
        <item name="colorPrimaryDark">@color/color0</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
