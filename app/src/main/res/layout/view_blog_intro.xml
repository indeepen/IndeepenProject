<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_blog_intro"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.release.indeepen.blog.BlogIntroView">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="341dp"
        android:layout_gravity="center_horizontal|bottom"
        android:padding="0dp">

        <ImageView
            android:id="@+id/img_blog_background"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:layout_gravity="center_horizontal|top"
            android:padding="0dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_weight="0.43"
            android:padding="0dp">


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="14dp">

            <ImageButton
                android:id="@+id/btn_tab_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/selector_art" />

            <ImageButton
                android:id="@+id/btn_tab_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@null"
                android:padding="0dp"
                android:src="@drawable/selector_favorite" />

            <ImageButton
                android:id="@+id/btn_tab_culture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@null"
                android:padding="0dp"
                android:src="@drawable/selector_culture" />

            <ImageButton
                android:id="@+id/btn_tab_collabo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@null"
                android:padding="0dp"
                android:src="@drawable/selector_collabo" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:layout_gravity="center_horizontal|bottom"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageView
                android:id="@+id/img_blog_thProfile"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|top" />


            <ImageButton
                android:id="@+id/btn_fanList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/text_fan_count"
                android:background="@null"
                android:paddingTop="57dp"
                android:src="@drawable/selector_fan" />


            <ImageButton
                android:id="@+id/btn_imissyou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_toEndOf="@+id/img_blog_thProfile"
                android:background="@null"
                android:paddingTop="57dp"
                android:src="@drawable/selector_imissu" />

            <TextView
                android:id="@+id/text_blog_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_blog_thProfile"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginTop="14dp"
                android:textColor="@color/colorText45"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/text_fan_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/text_imissu_count"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="20dp"
                android:layout_toStartOf="@+id/img_blog_thProfile"
                android:text="12"
                android:textColor="@color/colorText95"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/text_imissu_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/btn_imissyou"
                android:paddingTop="60dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorText95"
                android:textSize="13sp" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/btn_space_revome"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:text="@string/space_revome"
            android:visibility="invisible" />

    </FrameLayout>

</FrameLayout>
