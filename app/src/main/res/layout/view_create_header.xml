<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView44"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/colorE1" />


    <RelativeLayout
        android:id="@+id/layout_select_blog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <ImageView
            android:id="@+id/img_create_selected_blog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/text_create_selected_blog"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_create_selected_blog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/img_create_selected_blog"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/btn_show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="245dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="30dp"
            android:background="@null"
            android:src="@drawable/btn_bottom" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/set_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:orientation="horizontal"
        android:visibility="gone">

        <com.release.indeepen.create.HorizontalListView
            android:id="@+id/list_create_header_blog"
            android:layout_width="match_parent"
            android:layout_height="85dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView45"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorC9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:src="@drawable/emoticon_typo" />

        <RadioGroup
            android:id="@+id/group_emo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingTop="11dp"
            android:weightSum="5">

            <RadioButton
                android:id="@+id/img_create_emo_none"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:background="@drawable/selector_emo_none"
                android:button="@null"
                android:checked="true" />

            <RadioButton
                android:id="@+id/img_create_emo_happy"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/selector_emo_happy"
                android:button="@null" />


            <RadioButton
                android:id="@+id/img_create_emo_love"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/selector_emo_love"
                android:button="@null" />

            <RadioButton
                android:id="@+id/img_create_emo_sad"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/selector_emo_sad"
                android:button="@null" />


            <RadioButton
                android:id="@+id/img_create_emo_angry"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/selector_emo_angry"
                android:button="@null" />

        </RadioGroup>
    </LinearLayout>

