<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <ImageView
            android:id="@+id/img_image_single_thpro"
            android:layout_width="@dimen/my_profile_thumb"
            android:layout_height="@dimen/my_profile_thumb"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_image_single_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_image_single_thpro"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/img_image_single_thpro"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/text_image_single_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_image_single_artist"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/img_image_single_thpro"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/img_image_single_emotion"
            android:layout_width="@dimen/my_emotion"
            android:layout_height="@dimen/my_emotion"
            android:layout_alignBottom="@+id/text_image_single_date"
            android:layout_alignParentEnd="true"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/imageView50"
            android:layout_width="328dp"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/colorC9" />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_image_single_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="14dp"
        android:paddingTop="14dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
