<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_list_music"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.release.indeepen.content.art.singleList.SingleHeaderView
        android:id="@+id/view_single_music_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="14dp">

        <ImageView
            android:id="@+id/img_single_music"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/img_single_foreground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:alpha="0.6"
            android:scaleType="fitCenter"
            android:src="@drawable/play_icon" />

        <SeekBar
            android:id="@+id/seekBar_single_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_single_music"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal|bottom"
            android:indeterminate="false" />

    </RelativeLayout>

    <com.release.indeepen.content.art.singleList.SingleFooterView
        android:id="@+id/view_single_music_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />


</LinearLayout>