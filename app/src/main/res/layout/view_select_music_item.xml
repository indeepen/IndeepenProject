<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:id="@+id/img_music_select"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/text_music_select_title"
        android:layout_marginLeft="0dp"
        android:src="@drawable/mymusic_icon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_music_select_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="0dp"
        android:layout_weight="0.4"
        android:singleLine="true"
        android:text="Small Text"
        android:textColor="@color/color0"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/text_music_select_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_weight="0.2"
        android:singleLine="true"
        android:text="Small Text"
        android:textAlignment="viewEnd"
        android:textColor="@color/color7D"
        android:textSize="12sp" />

</RelativeLayout>