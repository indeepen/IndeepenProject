<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.release.indeepen.content.art.singleList.SingleHeaderView
        android:id="@+id/view_single_youtube_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.youtube.player.YouTubeThumbnailView
            android:id="@+id/youtub_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/youtub_single_foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/play_icon" />
    </FrameLayout>


    <com.release.indeepen.content.art.singleList.SingleFooterView
        android:id="@+id/view_single_youtube_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>