<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPopupBack"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/blog_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/blog_profile_modify" />

        <ImageButton
            android:id="@+id/blog_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/blog_profile_other"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/blog_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/blog_profile_show" />

        <ImageButton
            android:id="@+id/blog_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/blog_profile_upload" />

    </LinearLayout>
</RelativeLayout>
