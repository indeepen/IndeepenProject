<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="#ffffff"
        android:paddingBottom="20dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/pop_cate_all"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/popup_type_all" />

        <Button
            android:id="@+id/pop_cate_paint"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30.5dp"
            android:layout_toEndOf="@+id/pop_cate_all"
            android:background="@drawable/popup_category_paint" />

        <Button
            android:id="@+id/pop_cate_picture"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30.5dp"
            android:layout_toEndOf="@+id/pop_cate_paint"
            android:background="@drawable/popup_category_picture" />

        <Button
            android:id="@+id/pop_cate_music"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pop_cate_all"
            android:background="@drawable/popup_category_music" />

        <Button
            android:id="@+id/pop_cate_video"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_below="@+id/pop_cate_paint"
            android:layout_marginLeft="30.5dp"
            android:layout_toEndOf="@+id/pop_cate_all"
            android:background="@drawable/popup_category_video" />

        <Button
            android:id="@+id/pop_cate_culture"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_below="@+id/pop_cate_picture"
            android:layout_marginLeft="30.5dp"
            android:layout_toEndOf="@+id/pop_cate_video"
            android:background="@drawable/popup_category_culture" />
    </RelativeLayout>
</RelativeLayout>