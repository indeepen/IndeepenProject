<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPopupBack"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@color/colorWhite"
        android:paddingBottom="20dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/btn_all"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/popup_type_all"
            android:src="@drawable/popup_type_all" />

        <Button
            android:id="@+id/btn_display"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_alignBottom="@+id/btn_all"
            android:layout_marginLeft="30.5dp"
            android:layout_toEndOf="@+id/btn_all"
            android:background="@drawable/popup_type_display" />

        <Button
            android:id="@+id/btn_performance"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_alignBottom="@+id/btn_display"
            android:layout_marginLeft="30.5dp"
            android:layout_toEndOf="@+id/btn_display"
            android:background="@drawable/popup_type_performance" />

        <Button
            android:id="@+id/btn_show"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn_all"
            android:background="@drawable/popup_type_show" />

        <Button
            android:id="@+id/btn_festival"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_below="@+id/btn_display"
            android:layout_marginLeft="30.5dp"
            android:layout_toEndOf="@+id/btn_display"
            android:background="@drawable/popup_type_festival" />

        <Button
            android:id="@+id/btn_art"
            android:layout_width="45dp"
            android:layout_height="65dp"
            android:layout_alignTop="@+id/btn_show"
            android:layout_marginLeft="30.5dp"
            android:layout_toStartOf="@+id/btn_performance"
            android:background="@drawable/popup_type_art" />
    </RelativeLayout>
</RelativeLayout>